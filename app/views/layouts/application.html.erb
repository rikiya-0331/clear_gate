<!DOCTYPE html>
<html>
  <head>
    <title>ClearGate</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="flex flex-col min-h-screen bg-page-bg">
    <header class="bg-primary shadow-md">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-4">
          <div class="text-2xl font-bold text-white">
            <%= link_to "ClearGate", root_path, class: "hover:text-white hover:opacity-80" %>
          </div>
          <nav class="hidden md:flex items-center space-x-4">
            <%= link_to "ホーム", root_path, class: "text-white hover:text-white hover:opacity-80" %>
            <%= link_to "クイズで練習", start_quizzes_path, class: "text-white hover:text-white hover:opacity-80" %>
            <%= link_to "質問一覧", questions_path, class: "text-white hover:text-white hover:opacity-80" %>
            <% if user_signed_in? %>
              <%= link_to "マイページ", mypage_path, class: "text-white hover:text-white hover:opacity-80" %>
              <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "bg-primary hover:opacity-90 text-white font-bold py-2 px-4 rounded" %>
            <% else %>
              <%= link_to "アカウントを作成", new_user_registration_path, class: "text-white hover:text-white hover:opacity-80" %>
              <%= link_to "ログイン", new_user_session_path, class: "bg-primary hover:opacity-90 text-white font-bold py-2 px-4 rounded" %>
            <% end %>
          </nav>
        </div>
      </div>
    </header>

    <div id="flash" class="text-center">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>

    <main class="flex-grow container mx-auto px-4 py-8">
      <%= yield %>
    </main>

    <footer class="bg-primary text-white mt-auto">
      <div class="container mx-auto px-4 py-4 text-center">
        <p>&copy; 2025 ClearGate</p>
        <div class="flex justify-center space-x-4 mt-2">
          <%= link_to "利用規約", "#", class: "hover:text-gray-400" %>
          <%= link_to "プライバシーポリシー", "#", class: "hover:text-gray-400" %>
        </div>
      </div>
    </footer>
  </body>
</html>