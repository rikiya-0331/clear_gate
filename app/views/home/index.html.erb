<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full max-w-md p-8 space-y-8 text-center">
    <% if user_signed_in? %>
      <h1 class="text-2xl font-bold text-gray-900">こんにちは、<%= current_user.email %>さん！</h1>
      <div class="space-y-4">
        <%= link_to questions_path, class: "flex items-center justify-center w-full px-4 py-3 text-white bg-primary rounded-md hover:bg-opacity-90" do %>
          <i class="fas fa-list-ul mr-2"></i>
          <span>質問一覧</span>
        <% end %>
        <%= link_to start_quizzes_path, class: "flex items-center justify-center w-full px-4 py-3 text-white bg-primary rounded-md hover:bg-opacity-90" do %>
          <i class="fas fa-pencil-alt mr-2"></i>
          <span>クイズで練習</span>
        <% end %>
        <a href="#" class="flex items-center justify-center w-full px-4 py-3 text-white bg-primary rounded-md hover:bg-opacity-90">
          <i class="fas fa-search mr-2"></i>
          <span>質問をキーワードで検索</span>
        </a>
        <a href="<%= mypage_path %>" class="flex items-center justify-center w-full px-4 py-3 text-white bg-primary rounded-md hover:bg-opacity-90">
          <i class="fas fa-star mr-2"></i>
          <span>お気に入りした質問一覧</span>
        </a>
      </div>
    <% else %>
<div data-controller="modal" data-action="keydown.window->modal#handleKeydown">
  <div class="text-center mt-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">ClearGateへようこそ！</h1>
    <p class="text-lg text-gray-600 mb-8">英語学習をサポートするクイズアプリ</p>

    <%= link_to "クイズに挑戦", quizzes_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-xl shadow-lg transition duration-300 ease-in-out" %>

    <div class="mt-4">
      <button data-action="click->modal#open" class="text-gray-600 hover:text-gray-800 underline">
        初めての方へ：使い方ガイド
      </button>
    </div>
  </div>

  <%= render 'shared/how_to_use_modal' %>
</div>
    <% end %>
  </div>
</div>