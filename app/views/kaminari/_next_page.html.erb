<%# Link to the \"Next\" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%= link_to_unless current_page.last?, raw(t('views.pagination.next')), url, { rel: 'next', remote: remote, class: 'mx-1 px-3 py-1 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50' } do %>
  <span class="mx-1 px-3 py-1 text-gray-400 bg-white border border-gray-300 rounded-md cursor-not-allowed"><%= raw(t('views.pagination.next')) %></span>
<% end %>
