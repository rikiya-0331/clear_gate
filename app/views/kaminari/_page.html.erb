<% if page.current? %>
  <span class="mx-1 px-3 py-1 text-white bg-primary border border-primary rounded-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, {remote: remote, rel: page.rel, class: "mx-1 px-3 py-1 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"} %>
<% end %>
